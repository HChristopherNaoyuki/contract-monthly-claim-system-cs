{
  "ConnectionStrings": {
    "CMCSDatabase": "Server=localhost;Database=CMCS_Database;Trusted_Connection=true;TrustServerCertificate=true;MultipleActiveResultSets=true;Connection Timeout=30;",
    "LocalDB": "Server=(localdb)\\mssqllocaldb;Database=CMCS_Database;Trusted_Connection=true;TrustServerCertificate=true;MultipleActiveResultSets=true;",
    "SQLite": "Data Source=CMCS_Database.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Hosting": "Information",
      "Microsoft.AspNetCore.Server.Kestrel": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Microsoft.EntityFrameworkCore.Infrastructure": "Information"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning"
      }
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      },
      "Https": {
        "Url": "https://localhost:7000"
      }
    },
    "Limits": {
      "MaxRequestBodySize": 10485760,
      "MaxConcurrentConnections": 100,
      "MaxConcurrentUpgradedConnections": 100
    }
  },
  "HttpsRedirection": {
    "RedirectStatusCode": 307,
    "HttpsPort": 7000
  },
  "FileUpload": {
    "MaxFileSize": 5242880,
    "AllowedExtensions": [ ".pdf", ".doc", ".docx", ".jpg", ".jpeg", ".png" ]
  },
  "ApplicationSettings": {
    "SessionTimeoutMinutes": 30,
    "MaxLoginAttempts": 5,
    "PasswordPolicy": {
      "MinLength": 6,
      "RequireUppercase": true,
      "RequireLowercase": true,
      "RequireDigit": true
    },
    "Database": {
      "EnableRetryOnFailure": true,
      "MaxRetryCount": 3,
      "MaxRetryDelaySeconds": 5,
      "UseInMemoryDatabase": false,
      "UseTextFileStorage": true
    }
  }
}