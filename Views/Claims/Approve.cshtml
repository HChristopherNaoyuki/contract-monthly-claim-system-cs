@model List<contract_monthly_claim_system_cs.Models.ClaimViewModels.ClaimApprovalViewModel>

@{
    ViewData["Title"] = "Approve Claims";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Lecturer</th>
                <th>Claim Date</th>
                <th>Hours</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Documents</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.LecturerName</td>
                    <td>@claim.ClaimDate.ToShortDateString()</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.Amount.ToString("C")</td>
                    <td>
                        <span class="status-badge status-@claim.Status.ToLower()">@claim.Status</span>
                    </td>
                    <td>
                        @if (claim.DocumentNames.Any())
                        {
                            <ul style="margin: 0; padding-left: 16px;">
                                @foreach (var doc in claim.DocumentNames)
                                {
                                    <li style="font-size: 13px;">@doc</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span style="color: var(--system-gray); font-size: 13px;">No documents</span>
                        }
                    </td>
                    <td>
                        <div style="display: flex; gap: 8px;">
                            <a href="#" class="btn btn-success" style="padding: 8px 12px; font-size: 14px;">Approve</a>
                            <a href="#" class="btn btn-danger" style="padding: 8px 12px; font-size: 14px;">Reject</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>