@model List<contract_monthly_claim_system_cs.Models.ClaimViewModels.ClaimApprovalViewModel>
@{
    ViewData["Title"] = "Approve Claims";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    @if (!Model.Any())
    {
        <div class="card">
            <div class="card-content">
                <p style="color: #8E8E93; text-align: center;">No claims pending approval</p>
            </div>
        </div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Claim ID</th>
                    <th>Lecturer</th>
                    <th>Claim Date</th>
                    <th>Hours</th>
                    <th>Hourly Rate</th>
                    <th>Amount</th>
                    <th>Documents</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.ClaimId</td>
                        <td>@claim.LecturerName</td>
                        <td>@claim.ClaimDate.ToString("yyyy-MM-dd")</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate.ToString("C")</td>
                        <td>@claim.Amount.ToString("C")</td>
                        <td>
                            @if (claim.DocumentNames.Any())
                            {
                                <ul style="margin: 0; padding-left: 16px;">
                                    @foreach (var doc in claim.DocumentNames)
                                    {
                                        <li style="font-size: 13px;">@doc</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span style="color: #8E8E93; font-size: 13px;">No documents</span>
                            }
                        </td>
                        <td>
                            <div style="display: flex; gap: 8px; flex-direction: column;">
                                <form asp-action="ApproveClaim" method="post" style="display: inline;">
                                    <input type="hidden" name="claimId" value="@claim.ClaimId" />
                                    <input type="hidden" name="isApproved" value="true" />
                                    <button type="submit" class="btn btn-success" style="padding: 8px 12px; font-size: 14px; width: 100%;">Approve</button>
                                </form>
                                <form asp-action="ApproveClaim" method="post" style="display: inline;">
                                    <input type="hidden" name="claimId" value="@claim.ClaimId" />
                                    <input type="hidden" name="isApproved" value="false" />
                                    <button type="submit" class="btn btn-danger" style="padding: 8px 12px; font-size: 14px; width: 100%;">Reject</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="footer">
        <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Back to Home</a>
        <div class="copyright">© @DateTime.Now.Year - Contract Monthly Claim System</div>
    </div>
</div>

@section Scripts {
    <script>
        // Add confirmation for approval/rejection actions
        document.querySelectorAll('form[asp-action="ApproveClaim"]').forEach(form => {
            form.addEventListener('submit', function(e) {
                const action = this.querySelector('input[name="isApproved"]').value === 'true' ? 'approve' : 'reject';
                if (!confirm(`Are you sure you want to ${action} this claim?`)) {
                    e.preventDefault();
                }
            });
        });
    </script>
}