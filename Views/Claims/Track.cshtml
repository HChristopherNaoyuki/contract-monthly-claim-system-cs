@model List<contract_monthly_claim_system_cs.Models.ClaimViewModels.ClaimApprovalViewModel>

@{
    ViewData["Title"] = "Track Claims";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    @if (!Model.Any())
    {
        <div class="card">
            <div class="card-content">
                <p style="color: var(--system-gray); text-align: center;">No claims found</p>
            </div>
        </div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Claim ID</th>
                    <th>Lecturer</th>
                    <th>Claim Date</th>
                    <th>Hours</th>
                    <th>Hourly Rate</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Submission Comments</th>
                    <th>Approval Comments</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.ClaimId</td>
                        <td>@claim.LecturerName</td>
                        <td>@claim.ClaimDate.ToString("yyyy-MM-dd")</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate.ToString("C")</td>
                        <td>@claim.Amount.ToString("C")</td>
                        <td>
                            <span class="status-badge status-@claim.Status.ToLower()">@claim.Status</span>
                        </td>
                        <td style="max-width: 200px;">
                            @if (string.IsNullOrEmpty(claim.SubmissionComments))
                            {
                                <span style="color: var(--system-gray); font-size: 13px;">No comments</span>
                            }
                            else
                            {
                                <div style="font-size: 13px; word-wrap: break-word;">@claim.SubmissionComments</div>
                            }
                        </td>
                        <td style="max-width: 200px;">
                            @if (string.IsNullOrEmpty(claim.ApprovalComments))
                            {
                                <span style="color: var(--system-gray); font-size: 13px;">No comments</span>
                            }
                            else
                            {
                                <div style="font-size: 13px; word-wrap: break-word;">@claim.ApprovalComments</div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="footer">
        <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Back to Home</a>
        <div class="copyright">© @DateTime.Now.Year - Contract Monthly Claim System</div>
    </div>
</div>