@model contract_monthly_claim_system_cs.Models.ClaimViewModels.ClaimApprovalViewModel

@{
    ViewData["Title"] = "Claim Status";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-content">
            <h3>Claim #@Model.ClaimId</h3>

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: var(--spacing-lg); margin-bottom: var(--spacing-lg);">
                <div>
                    <p><strong>Lecturer:</strong> @Model.LecturerName</p>
                    <p><strong>Claim Date:</strong> @Model.ClaimDate.ToShortDateString()</p>
                    <p><strong>Hours Worked:</strong> @Model.HoursWorked</p>
                </div>
                <div>
                    <p><strong>Hourly Rate:</strong> @Model.HourlyRate.ToString("C")</p>
                    <p><strong>Claim Amount:</strong> @Model.Amount.ToString("C")</p>
                    <p><strong>Status:</strong> <span class="status-badge status-@Model.Status.ToLower()">@Model.Status</span></p>
                </div>
            </div>

            <h4>Supporting Documents</h4>
            @if (Model.DocumentNames.Any())
            {
                <ul>
                    @foreach (var doc in Model.DocumentNames)
                    {
                        <li>@doc</li>
                    }
                </ul>
            }
            else
            {
                <p style="color: var(--system-gray);">No documents uploaded</p>
            }
        </div>
    </div>

    <div class="footer">
        <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Back to Home</a>
        <div class="copyright">© 2025 - Contract Monthly Claim System</div>
    </div>
</div>