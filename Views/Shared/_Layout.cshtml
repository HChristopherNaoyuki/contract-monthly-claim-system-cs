<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contract Claims</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container">
                <a href="@Url.Action("Index", "Home")" class="navbar-brand">Contract Claims</a>
                <div class="navbar-nav">
                    @if (Context.Session.GetInt32("UserId") != null)
                    {
                        <a href="@Url.Action("Index", "Home")" class="nav-link">Home</a>
                        <a href="@Url.Action("Submit", "Claims")" class="nav-link">Submit Claim</a>
                        <a href="@Url.Action("Approve", "Claims")" class="nav-link">Review Claims</a>
                        <a href="@Url.Action("Track", "Claims")" class="nav-link">Track Claims</a>
                        <a href="@Url.Action("Privacy", "Home")" class="nav-link">Privacy</a>
                        <form asp-controller="Auth" asp-action="Logout" method="post" style="display: inline;">
                            <button type="submit" class="nav-link btn-link">Logout</button>
                        </form>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            &copy; 2024 - Contract Monthly Claim System
        </div>
    </footer>
</body>
</html>