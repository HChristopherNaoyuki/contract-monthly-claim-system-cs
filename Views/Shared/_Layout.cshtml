@using contract_monthly_claim_system_cs.Extensions
@using contract_monthly_claim_system_cs.Models.DataModels
@{
    var userId = Context.Session.GetSessionInt("UserId");
    var username = Context.Session.GetSessionString("Username");
    var name = Context.Session.GetSessionString("Name");
    var role = Context.Session.GetSessionString("Role");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] — Contract Claims</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="app-container">
        <header class="app-header">
            <div class="header-content">
                <!-- Navigation -->
                @if (userId != null)
                {
                    <div class="nav-center">
                        <a href="@Url.Action("Index", "Home")" class="nav-button">Home</a>

                        <!-- Lecturer Navigation -->
                        @if (role == UserRole.Lecturer.ToString())
                        {
                            <a href="@Url.Action("Submit", "Claims")" class="nav-button">Submit Claim</a>
                            <a href="@Url.Action("Track", "Claims")" class="nav-button">Track Claims</a>
                        }

                        <!-- Programme Coordinator Navigation -->
                        @if (role == UserRole.ProgrammeCoordinator.ToString())
                        {
                            <a href="@Url.Action("Approve", "Claims")" class="nav-button">Review Claims</a>
                            <a href="@Url.Action("Track", "Claims")" class="nav-button">Track Claims</a>
                        }

                        <!-- Academic Manager Navigation -->
                        @if (role == UserRole.AcademicManager.ToString())
                        {
                            <a href="@Url.Action("Approve", "Claims")" class="nav-button">Review Claims</a>
                            <a href="@Url.Action("Track", "Claims")" class="nav-button">Track Claims</a>
                            <a href="@Url.Action("HRDashboard", "Claims")" class="nav-button">HR Analytics</a>
                        }

                        <!-- Human Resource Navigation -->
                        @if (role == UserRole.HumanResource.ToString())
                        {
                            <a href="@Url.Action("Approve", "Claims")" class="nav-button">Review Claims</a>
                            <a href="@Url.Action("Track", "Claims")" class="nav-button">Track Claims</a>
                            <a href="@Url.Action("HRDashboard", "Claims")" class="nav-button">HR Analytics</a>
                        }

                        <a href="@Url.Action("Privacy", "Home")" class="nav-button">Privacy</a>
                    </div>
                }
                else
                {
                    <div class="nav-center">
                        <a href="@Url.Action("Index", "Home")" class="nav-button">Home</a>
                        <a href="@Url.Action("Privacy", "Home")" class="nav-button">Privacy</a>
                        <a href="@Url.Action("Index", "Auth")" class="nav-button">Login</a>
                    </div>
                }

                <!-- User profile section -->
                @if (userId != null)
                {
                    <div class="user-profile">
                        <div class="user-avatar">
                            @{
                                var firstLetter = !string.IsNullOrEmpty(name) ? name[0].ToString().ToUpper() : "U";
                            }
                            @firstLetter
                        </div>
                        <div class="user-info">
                            <span class="username">@username</span>
                            <span class="user-role">@role</span>
                        </div>
                        <form asp-controller="Auth" asp-action="Logout" method="post">
                            <button type="submit" class="logout-btn">Logout</button>
                        </form>
                    </div>
                }
            </div>
        </header>

        <main class="app-main">
            @RenderBody()
        </main>

        <!-- Part 3 POE: Enhanced Footer with System Information -->
        <footer class="app-footer">
            <div class="footer-content">
                <div class="footer-links">
                    <a href="@Url.Action("Index", "Home")" class="footer-link">Home</a>
                    <a href="@Url.Action("Privacy", "Home")" class="footer-link">Privacy</a>
                    <a href="@Url.Action("Index", "Auth")" class="footer-link">Login</a>
                </div>
                <div class="copyright">
                    © @DateTime.Now.Year - Contract Monthly Claim System | Part 3 POE Automation
                </div>
                <div class="system-info">
                    <small>Text File Storage | Apple-inspired Design | xUnit Testing</small>
                </div>
            </div>
        </footer>
    </div>

    <!-- Render Scripts section only if it's defined in the view -->
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", required: false)
    }
</body>
</html>