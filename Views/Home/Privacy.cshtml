@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container container-sm">
    <div class="privacy-header">
        <h1 class="privacy-title">Privacy Policy</h1>
        <p class="privacy-subtitle">Your privacy is important to us</p>
    </div>

    <div class="privacy-content">
        <!-- Introduction -->
        <section class="privacy-section">
            <p class="privacy-text">
                Your privacy is important to us. This policy explains how we collect, use, and protect your information.
            </p>
        </section>

        <!-- Data Collection -->
        <section class="privacy-section">
            <h2 class="section-title">Data Collection</h2>
            <p class="privacy-text">
                We collect only the information necessary to process your claims:
            </p>
            <ul class="privacy-list">
                <li class="privacy-list-item">Personal identification details</li>
                <li class="privacy-list-item">Claim documentation</li>
                <li class="privacy-list-item">Approval records</li>
            </ul>
        </section>

        <!-- Data Usage -->
        <section class="privacy-section">
            <h2 class="section-title">Data Usage</h2>
            <p class="privacy-text">
                Your information is used solely for:
            </p>
            <ul class="privacy-list">
                <li class="privacy-list-item">Processing monthly claims</li>
                <li class="privacy-list-item">System improvements</li>
                <li class="privacy-list-item">Compliance with regulations</li>
            </ul>
        </section>

        <!-- Website Usage -->
        <section class="privacy-section">
            <h2 class="section-title">Website Usage</h2>
            <div class="notice-card">
                <p class="notice-text">
                    UNDER NO CIRCUMSTANCES SHOULD IMAGES OR EMOJIS BE INCLUDED DIRECTLY IN THE README FILE.
                    ALL VISUAL MEDIA, INCLUDING SCREENSHOTS AND IMAGES OF THE APPLICATION, MUST BE STORED IN
                    A DEDICATED FOLDER WITHIN THE PROJECT DIRECTORY. THIS FOLDER SHOULD BE CLEARLY STRUCTURED
                    AND NAMED ACCORDINGLY TO INDICATE THAT IT CONTAINS ALL VISUAL CONTENT RELATED TO THE
                    APPLICATION (FOR EXAMPLE, A FOLDER NAMED IMAGES, SCREENSHOTS, OR MEDIA).
                </p>
            </div>
        </section>

        <!-- Liability Notice -->
        <section class="privacy-section">
            <h2 class="section-title">Liability Notice</h2>
            <div class="notice-card warning">
                <p class="notice-text">
                    I AM NOT LIABLE OR RESPONSIBLE FOR ANY MALFUNCTIONS, DEFECTS, OR ISSUES THAT MAY OCCUR AS A
                    RESULT OF COPYING, MODIFYING, OR USING THIS SOFTWARE. IF YOU ENCOUNTER ANY PROBLEMS OR ERRORS,
                    PLEASE DO NOT ATTEMPT TO FIX THEM SILENTLY OR OUTSIDE THE PROJECT. INSTEAD, KINDLY SUBMIT A
                    PULL REQUEST OR OPEN AN ISSUE ON THE CORRESPONDING GITHUB REPOSITORY, SO THAT IT CAN BE
                    ADDRESSED APPROPRIATELY BY THE MAINTAINERS OR CONTRIBUTORS.
                </p>
            </div>
        </section>
    </div>

    <!-- Back to Home -->
    <div class="privacy-actions">
        <a class="btn btn-outline" asp-controller="Home" asp-action="Index">
            Back to Home
        </a>
    </div>
</div>

<style>
    /* Privacy Page Minimalist Apple-like Styles */
    .privacy-header {
        text-align: center;
        margin-bottom: var(--spacing-xxl);
        padding-top: var(--spacing-xl);
    }

    .privacy-title {
        font-size: var(--font-size-large-title);
        font-weight: 700;
        color: var(--system-text-primary);
        margin-bottom: var(--spacing-sm);
        letter-spacing: -0.5px;
    }

    .privacy-subtitle {
        font-size: var(--font-size-title-3);
        color: var(--system-text-secondary);
        font-weight: 400;
    }

    .privacy-content {
        background: var(--system-background-primary);
        border-radius: var(--border-radius-lg);
        padding: var(--spacing-xl);
        margin-bottom: var(--spacing-xl);
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--system-gray-5);
    }

    .privacy-section {
        margin-bottom: var(--spacing-xl);
        padding-bottom: var(--spacing-xl);
        border-bottom: 1px solid var(--system-gray-6);
    }

        .privacy-section:last-of-type {
            margin-bottom: 0;
            padding-bottom: 0;
            border-bottom: none;
        }

    .section-title {
        font-size: var(--font-size-title-2);
        font-weight: 600;
        color: var(--system-text-primary);
        margin-bottom: var(--spacing-md);
        letter-spacing: -0.3px;
    }

    .privacy-text {
        font-size: var(--font-size-body);
        line-height: 1.6;
        color: var(--system-text-secondary);
        margin-bottom: var(--spacing-md);
    }

    .privacy-list {
        list-style: none;
        padding: 0;
        margin: var(--spacing-md) 0;
    }

    .privacy-list-item {
        position: relative;
        padding: var(--spacing-sm) 0 var(--spacing-sm) var(--spacing-lg);
        color: var(--system-text-secondary);
        line-height: 1.5;
        font-size: var(--font-size-body);
    }

        .privacy-list-item::before {
            content: "";
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 6px;
            height: 6px;
            background-color: var(--system-blue);
            border-radius: 50%;
        }

    .notice-card {
        background: var(--system-gray-6);
        border-radius: var(--border-radius-md);
        padding: var(--spacing-lg);
        border-left: 4px solid var(--system-gray-4);
    }

        .notice-card.warning {
            background: rgba(255, 149, 0, 0.05);
            border-left-color: var(--system-orange);
        }

    .notice-text {
        font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "Helvetica Neue", sans-serif;
        font-size: var(--font-size-footnote);
        line-height: 1.5;
        color: var(--system-text-secondary);
        margin: 0;
        white-space: pre-line;
    }

    .privacy-actions {
        display: flex;
        justify-content: center;
        padding-top: var(--spacing-lg);
        border-top: 1px solid var(--system-gray-6);
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .privacy-title {
            font-size: var(--font-size-title-1);
        }

        .privacy-subtitle {
            font-size: var(--font-size-headline);
        }

        .privacy-content {
            padding: var(--spacing-lg);
            margin-bottom: var(--spacing-lg);
        }

        .section-title {
            font-size: var(--font-size-title-3);
        }

        .notice-card {
            padding: var(--spacing-md);
        }
    }

    @@media (max-width: 480px) {
        .privacy-header {
            margin-bottom: var(--spacing-xl);
            padding-top: var(--spacing-lg);
        }

        .privacy-content {
            padding: var(--spacing-md);
            margin-bottom: var(--spacing-md);
        }

        .privacy-section {
            margin-bottom: var(--spacing-lg);
            padding-bottom: var(--spacing-lg);
        }

        .privacy-list-item {
            padding-left: var(--spacing-md);
        }

        .privacy-actions .btn {
            width: 100%;
        }
    }

    /* Dark Mode Support */
    @@media (prefers-color-scheme: dark) {
        .privacy-content {
            background: var(--system-background-primary);
            border-color: var(--system-gray-4);
        }

        .privacy-section {
            border-bottom-color: var(--system-gray-4);
        }

        .notice-card {
            background: var(--system-gray-5);
        }

            .notice-card.warning {
                background: rgba(255, 149, 0, 0.1);
            }
    }

    /* High Contrast Mode */
    @@media (prefers-contrast: high) {
        .privacy-content {
            border: 2px solid var(--system-text-primary);
        }

        .privacy-section {
            border-bottom: 2px solid var(--system-text-primary);
        }

        .notice-card {
            border-left: 4px solid var(--system-text-primary);
        }

        .privacy-list-item::before {
            background-color: var(--system-text-primary);
        }
    }

    /* Reduced Motion */
    @@media (prefers-reduced-motion: reduce) {
        * {
            transition: none !important;
            animation: none !important;
        }
    }
</style>

@section Scripts {
    <script>
        // Minimal privacy page interactions
        document.addEventListener('DOMContentLoaded', function () {
            // Add subtle hover effects to notice cards
            const noticeCards = document.querySelectorAll('.notice-card');

            noticeCards.forEach(card => {
                card.addEventListener('mouseenter', function () {
                    this.style.transform = 'translateY(-1px)';
                    this.style.transition = 'transform 0.2s ease';
                });

                card.addEventListener('mouseleave', function () {
                    this.style.transform = 'translateY(0)';
                });
            });

            // Smooth scroll to top when navigating back to home
            const backButton = document.querySelector('.btn[asp-controller="Home"]');
            if (backButton) {
                backButton.addEventListener('click', function (e) {
                    e.preventDefault();
                    window.scrollTo({
                        top: 0,
                        behavior: 'smooth'
                    });
                    setTimeout(() => {
                        window.location.href = this.href;
                    }, 300);
                });
            }

            // Track privacy policy view for analytics
            console.log('Privacy policy viewed - Contract Monthly Claim System');
        });
    </script>
}