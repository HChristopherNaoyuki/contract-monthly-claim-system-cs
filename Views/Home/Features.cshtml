@{
    ViewData["Title"] = "System Features - Part 3 POE Automation";
}

<div class="container">
    <div class="hero">
        <h1 class="hero-title">Part 3 POE Automation Features</h1>
        <p class="hero-subtitle">Comprehensive automation and analytics for the Contract Monthly Claim System</p>
    </div>

    <!-- Part 3 POE Main Features -->
    <div class="card">
        <div class="card-content">
            <h2 class="card-title">🚀 Core Automation Features</h2>
            <div class="features-grid">
                <div class="feature-item">
                    <div class="feature-icon">🤖</div>
                    <h3>Automated Claim Calculations</h3>
                    <p>Automatic calculation of claim amounts with overtime consideration and comprehensive validation checks</p>
                    <ul>
                        <li>Auto-calculation based on hours worked and hourly rates</li>
                        <li>Overtime calculation (1.5x rate for hours over 160)</li>
                        <li>Real-time validation and error prevention</li>
                        <li>Maximum claim limits and business rule enforcement</li>
                    </ul>
                </div>

                <div class="feature-item">
                    <div class="feature-icon">📊</div>
                    <h3>HR Analytics Dashboard</h3>
                    <p>Comprehensive analytics and automated reporting for Academic Managers</p>
                    <ul>
                        <li>Real-time claim statistics and performance metrics</li>
                        <li>Top performing lecturers analysis</li>
                        <li>Monthly breakdown and trend analysis</li>
                        <li>Automated report generation and data export</li>
                    </ul>
                </div>

                <div class="feature-item">
                    <div class="feature-icon">⚡</div>
                    <h3>Multi-level Approval Workflow</h3>
                    <p>Automated workflow management with coordinator and manager approval levels</p>
                    <ul>
                        <li>Programme Coordinator initial review</li>
                        <li>Academic Manager final approval</li>
                        <li>Automated status tracking and notifications</li>
                        <li>Audit trail for all approval decisions</li>
                    </ul>
                </div>

                <div class="feature-item">
                    <div class="feature-icon">📈</div>
                    <h3>Performance Analytics</h3>
                    <p>Automated lecturer performance tracking and departmental analysis</p>
                    <ul>
                        <li>Lecturer performance ratings</li>
                        <li>Departmental claim analysis</li>
                        <li>Trend identification and reporting</li>
                        <li>Automated performance insights</li>
                    </ul>
                </div>

                <div class="feature-item">
                    <div class="feature-icon">🔒</div>
                    <h3>Role-Based Access Control</h3>
                    <p>Comprehensive security with role-based permissions and data isolation</p>
                    <ul>
                        <li>Lecturer: Claim submission and tracking</li>
                        <li>Programme Coordinator: Claim review and approval</li>
                        <li>Academic Manager: Final approval and HR analytics</li>
                        <li>Secure data access and operation permissions</li>
                    </ul>
                </div>

                <div class="feature-item">
                    <div class="feature-icon">📁</div>
                    <h3>Document Management</h3>
                    <p>Secure document upload and automated processing system</p>
                    <ul>
                        <li>Multiple file type support (PDF, DOC, DOCX, JPG, PNG)</li>
                        <li>Secure file storage and retrieval</li>
                        <li>Automatic file validation and size limits</li>
                        <li>Document association with claims</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Technical Implementation -->
    <div class="card mt-lg">
        <div class="card-content">
            <h2 class="card-title">🛠️ Technical Implementation</h2>
            <div class="tech-grid">
                <div class="tech-item">
                    <h4>Architecture</h4>
                    <p>ASP.NET Core MVC with clean separation of concerns</p>
                </div>
                <div class="tech-item">
                    <h4>Data Storage</h4>
                    <p>Text file-based storage system (no database dependency)</p>
                </div>
                <div class="tech-item">
                    <h4>Testing</h4>
                    <p>xUnit 2.5.3 with comprehensive unit and integration tests</p>
                </div>
                <div class="tech-item">
                    <h4>UI/UX</h4>
                    <p>Minimalistic Apple-inspired design with responsive layout</p>
                </div>
                <div class="tech-item">
                    <h4>Security</h4>
                    <p>Session-based authentication with role-based authorization</p>
                </div>
                <div class="tech-item">
                    <h4>Validation</h4>
                    <p>Comprehensive client and server-side validation</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Part 3 POE Requirements Met -->
    <div class="card mt-lg">
        <div class="card-content">
            <h2 class="card-title">✅ Part 3 POE Requirements Achieved</h2>
            <div class="requirements-grid">
                <div class="requirement-item">
                    <h4>Automated Claim Submission</h4>
                    <p>✓ Auto-calculation feature implemented</p>
                    <p>✓ Validation checks for accurate data entry</p>
                    <p>✓ JavaScript libraries for client-side calculations</p>
                </div>
                <div class="requirement-item">
                    <h4>Automated Verification & Approval</h4>
                    <p>✓ Predefined criteria checking implemented</p>
                    <p>✓ Approval workflows streamlined</p>
                    <p>✓ Multi-level approval system</p>
                </div>
                <div class="requirement-item">
                    <h4>HR View Automation</h4>
                    <p>✓ Automated claim processing implemented</p>
                    <p>✓ Lecturer data management tasks</p>
                    <p>✓ Report generation and data export</p>
                </div>
                <div class="requirement-item">
                    <h4>Enhanced User Experience</h4>
                    <p>✓ Apple-inspired minimalist design</p>
                    <p>✓ Responsive and intuitive interface</p>
                    <p>✓ Real-time status tracking</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Access Section -->
    <div class="quick-access mt-lg">
        <h3>Ready to Explore?</h3>
        <div class="access-buttons">
            <a href="@Url.Action("Index", "Home")" class="btn btn-outline">
                🏠 Back to Home
            </a>
            @if (Context.Session.GetInt32("UserId") != null)
            {
                <a href="@Url.Action("HRDashboard", "Claims")" class="btn btn-primary">
                    📊 HR Analytics
                </a>
                <a href="@Url.Action("Submit", "Claims")" class="btn btn-success">
                    📝 Submit Claim
                </a>
            }
            else
            {
                <a href="@Url.Action("Index", "Auth")" class="btn btn-primary">
                    🔐 Get Started
                </a>
            }
        </div>
    </div>
</div>

<style>
    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: var(--spacing-lg);
        margin-top: var(--spacing-lg);
    }

    .feature-item {
        padding: var(--spacing-lg);
        background: var(--system-gray-6);
        border-radius: var(--border-radius-lg);
        border-left: 4px solid var(--system-blue);
    }

    .feature-icon {
        font-size: 2.5rem;
        margin-bottom: var(--spacing-md);
    }

    .feature-item h3 {
        color: var(--system-blue);
        margin-bottom: var(--spacing-md);
        font-size: var(--font-size-title-3);
    }

    .feature-item ul {
        margin-top: var(--spacing-md);
        padding-left: var(--spacing-lg);
    }

    .feature-item li {
        margin-bottom: var(--spacing-sm);
        color: var(--system-text-secondary);
    }

    .tech-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: var(--spacing-md);
        margin-top: var(--spacing-lg);
    }

    .tech-item {
        padding: var(--spacing-md);
        background: var(--system-gray-6);
        border-radius: var(--border-radius-md);
        text-align: center;
    }

        .tech-item h4 {
            color: var(--system-blue);
            margin-bottom: var(--spacing-sm);
        }

    .requirements-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: var(--spacing-lg);
        margin-top: var(--spacing-lg);
    }

    .requirement-item {
        padding: var(--spacing-lg);
        background: linear-gradient(135deg, var(--system-gray-6), var(--system-gray-5));
        border-radius: var(--border-radius-lg);
        border: 1px solid var(--system-gray-4);
    }

        .requirement-item h4 {
            color: var(--system-green);
            margin-bottom: var(--spacing-md);
            font-size: var(--font-size-headline);
        }

        .requirement-item p {
            margin-bottom: var(--spacing-sm);
            color: var(--system-text-secondary);
        }

    .quick-access {
        text-align: center;
        padding: var(--spacing-xl);
        background: var(--system-background-primary);
        border-radius: var(--border-radius-lg);
        border: 1px solid var(--system-gray-5);
    }

    .access-buttons {
        display: flex;
        gap: var(--spacing-md);
        justify-content: center;
        flex-wrap: wrap;
        margin-top: var(--spacing-lg);
    }

    @@media (max-width: 768px) {
        .features-grid {
            grid-template-columns: 1fr;
        }

        .tech-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .requirements-grid {
            grid-template-columns: 1fr;
        }

        .access-buttons {
            flex-direction: column;
            align-items: center;
        }

            .access-buttons .btn {
                width: 100%;
                max-width: 300px;
            }
    }
</style>