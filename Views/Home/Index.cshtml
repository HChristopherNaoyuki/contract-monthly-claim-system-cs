﻿@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="hero">
        <h1>@ViewData["WelcomeMessage"]</h1>
        <p class="subtitle">@ViewData["SystemDescription"]</p>
    </div>

    <div class="card-grid">
        <div class="card">
            <div class="card-image" style="background: linear-gradient(135deg, #E1F0FF 0%, #B9D7FF 100%);"></div>
            <div class="card-content">
                <a asp-controller="Claims" asp-action="Submit">
                    <span class="card-title">Submit New Claim</span>
                </a>
                <p class="card-desc">
                    Quickly submit your monthly claim with all required documentation
                </p>
                <a class="card-action" asp-controller="Claims" asp-action="Submit">
                    Get Started
                    <span aria-hidden="true">→</span>
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-image" style="background: linear-gradient(135deg, #FFEEF0 0%, #FFD5D9 100%);"></div>
            <div class="card-content">
                <a asp-controller="Claims" asp-action="Approve">
                    <span class="card-title">Review Claims</span>
                </a>
                <p class="card-desc">
                    Approve or reject pending claims as a coordinator or manager
                </p>
                <a class="card-action" asp-controller="Claims" asp-action="Approve">
                    View Dashboard
                    <span aria-hidden="true">→</span>
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-image" style="background: linear-gradient(135deg, #E8F9F0 0%, #C8EED7 100%);"></div>
            <div class="card-content">
                <a asp-controller="Claims" asp-action="Status">
                    <span class="card-title">Track Status</span>
                </a>
                <p class="card-desc">
                    Monitor the progress of your submitted claims in real-time
                </p>
                <a class="card-action" asp-controller="Claims" asp-action="Status" asp-route-claimId="1">
                    Check Status
                    <span aria-hidden="true">→</span>
                </a>
            </div>
        </div>
    </div>

    <div class="footer">
        <a class="btn btn-secondary" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        <div class="copyright">© 2025 - Contract Monthly Claim System</div>
    </div>
</div>