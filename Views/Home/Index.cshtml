@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="hero">
        <h1>@ViewData["WelcomeMessage"]</h1>
        <p class="subtitle">@ViewData["SystemDescription"]</p>
    </div>

    <div class="card-grid">
        <div class="card">
            <div class="image" style="background-color: #E1F0FF;"></div>
            <div class="content">
                <a asp-controller="Claims" asp-action="Submit">
                    <span class="title">Submit New Claim</span>
                </a>
                <p class="desc">
                    Quickly submit your monthly claim with all required documentation
                </p>
                <a class="action" asp-controller="Claims" asp-action="Submit">
                    Get Started
                    <span aria-hidden="true">→</span>
                </a>
            </div>
        </div>

        <div class="card">
            <div class="image" style="background-color: #FFEEF0;"></div>
            <div class="content">
                <a asp-controller="Claims" asp-action="Approve">
                    <span class="title">Review Claims</span>
                </a>
                <p class="desc">
                    Approve or reject pending claims as a coordinator or manager
                </p>
                <a class="action" asp-controller="Claims" asp-action="Approve">
                    View Dashboard
                    <span aria-hidden="true">→</span>
                </a>
            </div>
        </div>

        <div class="card">
            <div class="image" style="background-color: #E8F9F0;"></div>
            <div class="content">
                <a asp-controller="Claims" asp-action="Status">
                    <span class="title">Track Status</span>
                </a>
                <p class="desc">
                    Monitor the progress of your submitted claims in real-time
                </p>
                <a class="action" asp-controller="Claims" asp-action="Status" asp-route-claimId="1">
                    Check Status
                    <span aria-hidden="true">→</span>
                </a>
            </div>
        </div>
    </div>
</div>